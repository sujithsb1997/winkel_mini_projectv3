<%- include ('../partials/adminTableHeader.ejs') %>

<form action="/admin/addProduct" method="post" class="my-auto" style="height: 90vh;" enctype="multipart/form-data">
    <div class="container h-100 ">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card bg-transparent" style="border-radius: 25px;">
                    <div class="card-body p-md-2">
                        <div class="row justify-content-center">
                            <div class="col-md-2 col-lg-6 col-xl-5 order-2 order-lg-1 width-50">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add<span class="text-main-1">Product</span></p>

                                <form class="mx-1 mx-md-2">
      
                                    <div class="d-flex flex-row align-items-center mb-2">
                                      
                                      <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example1c">Name</label>
                                        <input type="text" id="form3Example1c" class="form-control" name="sName" required/>
                                        
                                      </div>
                                    </div>
                  
                                    <div class="d-flex flex-row align-items-center mb-2">
                                      
                                      <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example3c">Stock</label>
                                        <input type="text" id="form3Example3c" class="form-control" name="sQuantity" required/>
                                        
                                      </div>
                                    </div>
                  
                                    <div class="d-flex flex-row align-items-center mb-2">
                                       
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example1c">Price</label>
                                          <input type="number" id="form3Example1c" class="form-control" name="sPrice" required/>
                                          
                                        </div>
                                      </div>
            
                                    <div class="d-flex flex-row align-items-center mb-2">
                                     
                                      <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example4c">Description</label>
                                        <input type="text" id="form3Example4c" class="form-control" name="sDescription" required/>
                                        
                                      </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-2">
                                       
                                      <div class="form-outline flex-fill mb-0">
                                          <label class="form-label" for="form3Example1c">Rating</label>
                                        <input type="number" id="form3Example1c" class="form-control" name="sRating"  max="5" required/>
                                        
                                      </div>
                                    </div>

                                    <script>
                                      
                                    </script>
                                    <div class="d-flex flex-row align-items-center mb-2">
                                       
                                      <div class="form-outline flex-fill mb-0">
                                        <label class="form-label  select-label" for="form3Example1c"></label>
                                        <!-- <select name="genre" class="form-control">
                                          <option value="" disabled selected>Category</option>
                                          <option value="T-Shirt">T-shirt</option>
                                          <option value="Shirt">Shirt</option>
                                          <option value="Shoes">Shoes</option>
                                          <option value="Bags">Bags</option>
                                          <option value="watches">Watches</option>
                                        </select> -->

                                        <select name="sCategory" class="form-control">
                                          <option value="" disabled selected>Select a Category</option>
                                          <% if(category){ %>
                                          <% for(let i=1;i <= category.length; i++){ %>
                                            <option value="<%= category[i-1].name %>">
                                              <%= category[i-1].name %>
                                            </option>
                                            <% } %>
                                          <% }else{ %>
                                            <h1>No Categories to add</h1>
                                          <% } %>  
                                        </select>

                                      </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                          <label class="form-label" for="form3Example4c">Image</label>
                                          <input type="file" id="form3Example4c" class="form-control" name="sImage" multiple accept="image/png, image/gif, image/jpeg, image/jpg ,image/webp" />
                                        </div>
                                      </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                      <button  type="submit" value="Register" class="btn btn-primary btn-lg">Add Product</button>
                                      <a href="/admin/adminProduct" class="btn btn-primary ml-2 btn-lg">Go Back</a>
                                    </div>
            
                                    <% if(typeof message !== 'undefined'){%>
                                        <p style="color:green"><%= message %></p>
                                    <% } %>
                                  </form>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</form>

<%- include ('../partials/adminTableFooter.ejs') %>